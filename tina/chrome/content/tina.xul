<?xml version="1.0"?>

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://tina/content/tina.css" type="text/css"?>
<?xml-stylesheet href="chrome://tina/skin/" type="text/css"?>

<!DOCTYPE window [
<!ENTITY % brandDTD SYSTEM "chrome://branding/locale/brand.dtd" >
%brandDTD;
<!ENTITY % windowDTD SYSTEM "chrome://tina/locale/tina.dtd" >
%windowDTD;
]>

<window windowtype="TinaSoft:Main" onload="startup()"
        style="&window.style;" title="&brandShortName;"
        xmlns:xhtml="http://www.w3.org/1999/xhtml"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <script src="chrome://global/content/globalOverlay.js"/>
  <script src="chrome://global/content/contentAreaUtils.js"/>
  <script src="tina.js"/>
  <script type="application/x-python" src="tina.py"/>
  <stringbundle id="strings" src="chrome://tina/locale/tina.properties"/>

  <menubar>
    <menu id="sessionMenu" label="&session.menu.label;" accesskey="&session.menu.accesskey;">
      <menupopup>
        <menuitem id="menu-session-new" oncommand="sessionNew()" class="menuitem-iconic"
                  label="&session.menu.new.label;" accesskey="&session.menu.new.accesskey;"/>
        <menuitem id="menu-session-open" oncommand="sessionOpen()" class="menuitem-iconic"
                  label="&session.menu.open.label;" accesskey="&session.menu.open.accesskey;"/>
        <menuitem id="menu-session-close" oncommand="sessionClose()" class="menuitem-iconic"
                  label="&session.menu.close.label;" accesskey="&session.menu.close.accesskey;"/>
        
        <menuseperator/>
        <menuitem id="menu-session-export" oncommand="sessionExport()" class="menuitem-iconic"
                  label="&session.menu.export.label;" accesskey="&session.menu.export.accesskey;"/>
        <menuseparator/>
        <menuitem id="menu-session-exit" oncommand="exit()" class="menuitem-iconic"
                  label="&session.menu.exit.label;" accesskey="&session.menu.exit.accesskey;"/>
      </menupopup>
    </menu>
    
    <menu id="corpusMenu" label="&corpus.menu.label;" accesskey="&corpus.menu.accesskey;">
    </menu>
    <menu id="indexationMenu" label="&indexation.menu.label;" accesskey="&indexation.menu.accesskey;">
    </menu>
    <menu id="proximityMenu" label="&proximity.menu.label;" accesskey="&proximity.menu.accesskey;">
    </menu>
    <menu id="clusteringMenu" label="&clustering.menu.label;" accesskey="&clustering.menu.accesskey;">
    </menu>
    <menu id="filteringMenu" label="&filtering.menu.label;" accesskey="&filtering.menu.accesskey;">
    </menu>
    <menu id="visualizationMenu" label="&visualization.menu.label;" accesskey="&visualization.menu.accesskey;">
    </menu>
    
    <menu id="toolsMenu" label="&toolsMenu.label;" accesskey="&toolsMenu.accesskey;">
      <menupopup>
        <menuitem id="menu-addons" oncommand="openAddons()" class="menuitem-iconic"
                  label="&addons.label;" accesskey="&addons.accesskey;"/>
        <menuitem id="menu-console" oncommand="openErrorConsole()" class="menuitem-iconic"
                  label="&console.label;" accesskey="&console.accesskey;"/>
        <menuitem id="menu-config" oncommand="openConfig()" class="menuitem-iconic"
                  label="&config.label;" accesskey="&config.accesskey;"/>
        <menuseparator/>
        <menuitem id="menu-inspector" oncommand="openDOMInspector()" class="menuitem-iconic"
                  label="&inspector.label;" accesskey="&inspector.accesskey;"/>
      </menupopup>
    </menu>
    
    <menu id="helpMenu" label="&helpMenu.label;" accesskey="&helpMenu.accesskey;">
      <menupopup onpopupshowing="buildHelpMenu();">
        <menuitem id="menu-help" oncommand="openHelp()" class="menuitem-iconic"
                  label="&help.label;" accesskey="&help.accesskey;"/>
        <menuitem id="menu-updates" oncommand="openUpdates()" class="menuitem-iconic"
                  label="&updates.label;" accesskey="&updates.accesskey;"/>
        <menuitem id="aboutName" oncommand="openAbout()"
                  label="&about.label;" accesskey="&about.accesskey;"/>
      </menupopup>
    </menu>
    
  </menubar>

  <radiogroup id="workflowTabs" xhtml:role="listbox" orient="horizontal" oncommand="workflowTabSelected(event)">
     <radio id="corpusTab" label="&corpus.tab.label;" href="chrome://tina/content/corpus.xul"/>
     <radio id="indexationTab" label="&indexation.tab.label;" href="chrome://tina/content/indexation.xul" />
     <radio id="proximityTab" label="&proximity.tab.label;"  href="chrome://tina/content/proximity.xul"/>
     <radio id="clusteringTab" label="&clustering.tab.label;"  href="chrome://tina/content/clustering.xul"/>
     <radio id="filteringTab" label="&filtering.tab.label;"  href="chrome://tina/content/filtering.xul"/>
     <radio id="visualizationTab" label="&visualization.tab.label;" href="chrome://tina/content/visualization.xul"/>
  </radiogroup>
  <hbox flex="1" id="pane">
    <iframe id="tabDisplay" flex="1" src="chrome://tina/content/home.xul"/>
  </hbox>
  <statusbar>
    <statusbarpanel id="statuspanel" flex="1" onclick="pytest()"/>
  </statusbar>
</window>
